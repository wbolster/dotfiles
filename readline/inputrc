# inputrc for readline

set completion-ignore-case on
set enable-bracketed-paste on

# History
control-p:    history-search-backward
control-n:    history-search-forward
# "\e[5~":   history-search-backward  # PageUp
# "\e[6~":   history-search-forward   # PageDown

# Ctrl-Left and Ctrl-Right
"\e[5C":   forward-word
"\e[5D":   backward-word
"\e\e[C":  forward-word
"\e\e[D":  backward-word

control-o: alias-expand-line

# development and debugging
"\C-xf": dump-functions
"\C-xv": dump-variables
"\C-xm": dump-macros

# Bash
$if Bash
    set blink-matching-paren on
    set colored-completion-prefix on
    set colored-stats on
    set completion-map-case on
    set mark-symlinked-directories on
    set match-hidden-files off
    set menu-complete-display-prefix on
    set show-all-if-ambiguous on
    set skip-completed-text on
    set visible-stats on

    # Alternative to <return> or C-m: end-of-line,
    # delete-horizontal-space, pipe through pager
    control-j: "\C-e\e\\ |& ,pager-if-tty\C-m"

    control-o: history-and-alias-expand-line
    control-w: backward-kill-word
    space: magic-space
    tab: menu-complete
$endif
